version: '3.3'

services:

  # PROXY:
  nginx:
    image: nginx
    restart: always
    volumes:
      - ./nginx_proxy.conf:/etc/nginx/conf.d/default.conf
      - ../HEALTH/healthcheck_nginx.sh:/bin/healthcheck.sh
      - ../../SECURITY/ssl/certs/cert_and_chain.crt:/etc/ssl/certs/myhost.crt:ro
      - ../../SECURITY/ssl/certs/private:/etc/ssl/private/myhost.key:ro
    ports:
      - "8193:443"
    networks:
      - vre_odv_p_explorer_network
    depends_on:
      - webodv
    healthcheck:
      test: ["CMD", "/bin/healthcheck.sh"]
      interval: 60s
      timeout: 30s
      retries: 5

  webodv:
   image: registry-sdc.argo.grnet.gr/vre_webodv:20200427-1
   restart: always
   depends_on:
    - db
   ports:
    - "80"
   volumes:
       # PKTenv
       - ./settings/PKTenv:/var/www/html/webodv/.env
       # ODV installation
       - /var/ODV/odv_software:/var/www/html/bin:rw
       # ODV bathy data
       - /var/ODV/ODV:/home/woody/Documents/ODV:rw
       # webODV settings
       - ./settings:/var/www/html/webodv/storage/app/settings/settings_webodv:rw
       # vre mount
       - /nfs-export:/var/www/html/webodv/storage/app/odv_data:rw
   networks:
    - vre_odv_p_explorer_network
   environment:
    # 1. Does the service run behind a reverse proxy?
    # If , makes sure that the FORCE_ROOT_URL is used in all HTML links,
    # HTML forms etc. (served by Laravel) if service runs behind a
    # reverse proxy, i.e. forceRootUrl() is enforced in Laravel.
    # Please use 1 for true and 0 for false!
    REVERSE_PROXY: 1 # 1=true!
    #
    # 2. This URL is used in HTML links, HTML forms etc. (served by
    # Laravel) if service runs behind a reverse proxy, i.e. forceRootUrl()
    # is enforced in Laravel.
    # Please include the protocol, i.e. "https://".
    # Note: Only used if REVERSE_PROXY is true.
    FORCE_ROOT_URL: 'https://sdc-test.argo.grnet.gr:8193'
    # 
    # 3. This makes sure that https is used in HTML links, HTML forms etc.
    # (served by Laravel) if service runs behind a reverse proxy, i.e.
    # forceScheme() is enforced in Laravel.
    # Note: Only used if REVERSE_PROXY is true.
    FORCE_SCHEME: 'https'
    #
    # 4. Dashboard URL, for authentication: ODV asks this URL for token
    # verification.
    dashboard_url: 'https://sdc-test.argo.grnet.gr'
    #
    # 5. Some needed paths to the settings and data etc.
    webodv_service: explorer
    settings_path: /var/www/html/webodv/storage/app/settings
    path_to_odv_data: odv_data
    path_to_odv_settings: settings_webodv
    path_to_odv_data_2: webodv
   labels:
     - "webODV in VRE"
   healthcheck:
    test: ["CMD", "curl", "-f", "http://localhost:80/webodv"]
    interval: 60s
    timeout: 30s
    retries: 5

  db:
   image: mysql/mysql-server:8.0.0
   restart: always
   environment:
    MYSQL_ROOT_PASSWORD: "root"
    MYSQL_DATABASE: "webodv"
    MYSQL_USER: "webodv"
    MYSQL_PASSWORD: "webodv"
   networks:
    - vre_odv_p_explorer_network
   #volumes:
   # - ./mysql_data_persistent:/var/lib/mysql
   healthcheck:
    test: "/usr/bin/mysql --user=webodv --password=webodv --silent --execute \"SELECT 1;\"" #please adapt!
    interval: 30s
    timeout: 10s
    retries: 5

networks:
  vre_odv_p_explorer_network:
    external: true
